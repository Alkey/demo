<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="Ivan">
        <createTable tableName="clients">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Ivan">
        <createTable tableName="roles">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Ivan">
        <createTable tableName="clients_roles">
            <column name="client_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="roles_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="clients_roles"
                                 baseColumnNames="client_id"
                                 constraintName="fk_clients_roles_client_id"
                                 referencedTableName="clients"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="clients_roles"
                                 baseColumnNames="roles_id"
                                 constraintName="fk_clients_roles_roles_id"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
        <insert tableName="roles">
            <column name="role_name" value="ROLE_USER"/>
        </insert>
        <insert tableName="roles">
            <column name="role_name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>
</databaseChangeLog>
